<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spyker.commons.mapper.OpenProcessGroupMapper">


    <select id="query" resultType="com.spyker.commons.entity.OpenProcessGroup"
            parameterType="com.spyker.commons.search.OpenProcessGroupSearch">
        SELECT
        a.*
        FROM
        open_process_group a
        <where>
                    <if test="null != delFlag ">
                        and a.del_flag = #{delFlag}
                    </if>
                    <if test="null != groupName ">
                        and a.group_name = #{groupName}
                    </if>
                    <if test="null != sortValue ">
                        and a.sort_value = #{sortValue}
                    </if>
                    <if test="null != tenantId ">
                        and a.tenant_id = #{tenantId}
                    </if>
        </where>
    </select>

    <select id="queryPage" resultType="com.spyker.commons.entity.OpenProcessGroup"
            parameterType="com.spyker.commons.search.OpenProcessGroupSearch">
        SELECT
        a.*
        FROM
        open_process_group a
        <where>
                    <if test="null != search.delFlag ">
                        and a.del_flag = #{search.delFlag}
                    </if>
                    <if test="null != search.groupName ">
                        and a.group_name = #{search.groupName}
                    </if>
                    <if test="null != search.sortValue ">
                        and a.sort_value = #{search.sortValue}
                    </if>
                    <if test="null != search.tenantId ">
                        and a.tenant_id = #{search.tenantId}
                    </if>
        </where>
    </select>

</mapper>