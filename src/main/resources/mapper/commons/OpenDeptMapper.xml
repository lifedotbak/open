<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spyker.commons.mapper.OpenDeptMapper">


    <select id="query" resultType="com.spyker.commons.entity.OpenDept"
            parameterType="com.spyker.commons.search.OpenDeptSearch">
        SELECT
        a.*
        FROM
        open_dept a
        <where>
                    <if test="null != name ">
                        and a.name = #{name}
                    </if>
                    <if test="null != parentId ">
                        and a.parent_id = #{parentId}
                    </if>
                    <if test="null != delFlag ">
                        and a.del_flag = #{delFlag}
                    </if>
                    <if test="null != status ">
                        and a.status = #{status}
                    </if>
                    <if test="null != sortValue ">
                        and a.sort_value = #{sortValue}
                    </if>
                    <if test="null != tenantId ">
                        and a.tenant_id = #{tenantId}
                    </if>
        </where>
    </select>

    <select id="queryPage" resultType="com.spyker.commons.entity.OpenDept"
            parameterType="com.spyker.commons.search.OpenDeptSearch">
        SELECT
        a.*
        FROM
        open_dept a
        <where>
                    <if test="null != search.name ">
                        and a.name = #{search.name}
                    </if>
                    <if test="null != search.parentId ">
                        and a.parent_id = #{search.parentId}
                    </if>
                    <if test="null != search.delFlag ">
                        and a.del_flag = #{search.delFlag}
                    </if>
                    <if test="null != search.status ">
                        and a.status = #{search.status}
                    </if>
                    <if test="null != search.sortValue ">
                        and a.sort_value = #{search.sortValue}
                    </if>
                    <if test="null != search.tenantId ">
                        and a.tenant_id = #{search.tenantId}
                    </if>
        </where>
    </select>

</mapper>